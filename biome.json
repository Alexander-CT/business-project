{
    "$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useConst": "off",
                "noNonNullAssertion": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off",
                "useButtonType": "off",
                "useKeyWithClickEvents": "off"
            },
            "complexity": {
                "noForEach": "off",
                "noStaticOnlyClass": "off"
            },
            "suspicious": {
                "noMisleadingCharacterClass": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "es5",
            "quoteProperties": "asNeeded",
            "arrowParentheses": "always",
            "jsxQuoteStyle": "single"
        }
    },
    "css": {
        "formatter": {
            "quoteStyle": "single",
            "indentWidth": 4,
            "indentStyle": "space"
        }
    },
    "files": {
        "ignore": ["node_modules", "dist"]
    }
}
